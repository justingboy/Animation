<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="64.0dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="50.0dip"
        android:layout_height="50.0dip"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="2dp"
        android:scaleType="center"
        android:src="@drawable/bind_mail" />

    <LinearLayout
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="12.0dip"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
              style="@style/NotificationTitle" 
            android:id="@+id/download_notication_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:singleLine="true"
            android:text="凡人修仙传"
           />

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="7.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_marginTop="5dp"
            android:progressDrawable="@drawable/download_app_progress" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/progresslayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/down_book"
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:src="@drawable/bookshelf_down_wait" >
        </ImageView>

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0kb/s" />
    </LinearLayout>

</LinearLayout>